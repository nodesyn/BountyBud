
# The command that runs the program
run = "npm run dev"

# The primary language of the repl
language = "nodejs"

# Specify Node.js modules
modules = ["nodejs-20"]

# List of files that will not be uploaded to the server on a push
ignoredPaths = [".next", "node_modules", ".git"]

# Configures the run button
[deployment]
run = ["sh", "-c", "node server.js"]
build = ["sh", "-c", "npm install && npm run build"]
ignorePorts = false

# Packager configuration
[packager]
language = "nodejs"

[packager.features]
enabledForHosting = false
packageSearch = true
guessImports = true

# Language server configuration
[languages.javascript]
pattern = "**/{*.js,*.jsx,*.ts,*.tsx}"

[languages.javascript.languageServer]
start = "typescript-language-server --stdio"

# Nix configuration
[nix]
channel = "stable-22_11"

[workflows]
runButton = "Development Server"

[[workflows.workflow]]
name = "Install and Start"
author = 3754017
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Development Server"
author = 3754017
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[ports]]
localPort = 3000
externalPort = 3000
